
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* These settings explicitly disable declaration file generation */
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "noEmit": true,
    
    /* Suppress error about composite projects */
    "composite": false,
    "incremental": false,
    "tsBuildInfoFile": null,
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    
    /* Error suppression */
    "suppressImplicitAnyIndexErrors": true,
    "suppressExcessPropertyErrors": true,
    
    /* Path aliases */
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/declaration-suppression.d.ts", "no-emit.d.ts"],
  "exclude": ["node_modules", "**/*.d.ts", "tsconfig.node.json", "tsconfig.app.json"]
}
